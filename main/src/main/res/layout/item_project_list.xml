<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_project_img"
            android:layout_width="120dp"
            android:layout_height="240dp"
            tools:src="@drawable/img_google_developer"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_project_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Android开发艺术探索"
                android:textSize="16sp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/tv_project_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Android开发艺术探索"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="5"
                android:layout_marginTop="4dp"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_project_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    tools:text="1天前"/>

                <TextView
                    android:id="@+id/tv_project_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="jt"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>